{% extends "./base.html.twig" %}

{% block body %}
    <div class="w-4/5 m-auto text-center">
        <div class="py-12 border-b border-gray-200">
            <h1 class="text-6xl pt-12 pb-8">
                Conducteurs: ({{ drivers|length }})
            </h1>
        </div>
    </div>

        <div class="mx-auto w-1/5 my-8">
        <a href="/supervisor/create" class="uppercase border border-gray-500 text-lg py-4 px-6 rounded bg-gray-800 text-white">
            Ajouter conducteur
        </a>
    </div>

    
    <div class="md:column gap-10 w-1/3 py-15 ">
        <!-- Review Item -->
        {% for driver in drivers %}
            <div class="text-center pt-8 pb-4">

                <h2 class="text-gray-700 font-bold text-3xl py-2">
                    {{ driver.name }}
                </h2>

                <h2 class="text-base text-gray-700 pb-10 text-2xl">
                    Travaille {{ driver.workDays }} jour(s) avec un vehicule de marque {{driver.vehicle}}
                </h2>

               <div class="md:grid lg:grid-cols-2 gap-20 w-4/5 mx-auto py-15">
                    <a href="/supervisor/edit/{{ driver.id }}" class="bg-green-500 font-bold py-2 px-4 ml-6 rounded transition-all hover:bg-green-300">
                        Ã‰diter
                    </a>

                    <form action="{{ path('delete_driver', {id: driver.id}) }}" method="POST" class="form-example">
                        <input type="hidden" name="_method" value="DELETE" />
                        <button type="submit" class="bg-red-500 font-bold py-2 px-4 ml-6 rounded transition-all hover:bg-red-300">Supprimer</button>
                    </form>
                </div>   
            </div>
        {% endfor %}
    </div>
{% endblock %}